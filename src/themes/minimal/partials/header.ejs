<header class="border-b border-gray-200">
    <nav class="mx-auto px-4 py-6 flex items-center justify-between max-w-screen-md">
        <div class="flex items-center space-x-6">
            <% menu.forEach(function(menuItem) { %>
                <a href="<%= menuItem.url %>"
                   class="<%= currentPage === menuItem.url ? 'font-bold' : '' %>">
                    <%= menuItem.title %>
                </a>
            <% }); %>
        </div>
    </nav>
</header>
