<header>
    <nav class="border-b border-gray-100 bg-white/80 backdrop-blur-sm fixed w-full z-10">
        <div class="max-w-2xl mx-auto px-4 py-3 flex items-center justify-between">
            <div class="flex items-center gap-2">
                <a href="/">
                    <span class="font-medium text-aurora-dark text-lg"><%= siteMetadata.name %></span>
                </a>
            </div>
            <div class="flex items-center gap-4">
                <% menu.forEach(function(menuItem) { %>
                    <a href="<%= menuItem.url %>"
                    class="<%= currentPage === menuItem.url ? 'font-bold text-aurora-dark' : 'text-gray-500' %>">
                        <%= menuItem.title %>
                    </a>
                <% }); %>
            </div>
        </div>
    </nav>
</header>
